<h1>Listing articles</h1>

<table>
  <tr>
    <th>Token</th>
    <th>Title</th>
    <th>Email</th>
    <th>Leadin</th>
    <th>Body</th>
    <th>Path</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.token %></td>
    <td><%= article.title %></td>
    <td><%= article.email %></td>
    <td><%= article.leadin %></td>
    <td><%= article.body %></td>
    <td><%= article.path %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

